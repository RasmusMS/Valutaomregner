        <ComboBox x:Name="Combo2" HorizontalAlignment="Left" Height="25" Margin="530,250,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem>DKK</ComboBoxItem>
            <ComboBoxItem>EUR</ComboBoxItem>
