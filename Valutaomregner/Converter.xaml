        <Label Name="lbl1" Content="Beløb" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="120" Margin="530,215,0,0"/>
        <TextBox x:Name="txt1" HorizontalAlignment="Left" Margin="150,215,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="25"/>
    </Grid>
</Page>
